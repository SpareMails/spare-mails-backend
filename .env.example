# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=spare_mails
DB_USER=root
DB_PASSWORD=

# Logging Configuration
LOG_LEVEL=info

# Email Configuration
# Maximum attachment size in MB
MAX_ATTACHMENT_SIZE=10

# Cleanup Configuration
# How many days to keep old emails before deletion
CLEANUP_DAYS=30

# How many days to keep attachments before deletion
ATTACHMENT_CLEANUP_DAYS=7

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting (requests per minute)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Default domain for temporary emails
DEFAULT_DOMAINS=temp-mail.local,10minute-mail.local,guerrilla-mail.local

# Temporary email settings
DEFAULT_EXPIRY_MINUTES=10
MAX_EXPIRY_MINUTES=1440
MIN_EXPIRY_MINUTES=1